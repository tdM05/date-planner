# Application Environment
APP_ENV=development

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=
SUPABASE_KEY=

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# TODO: Replace with real Google OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# JWT Configuration
# Generate a secure random string for JWT_SECRET_KEY (e.g., using: openssl rand -hex 32)
JWT_SECRET_KEY=
JWT_ALGORITHM=
JWT_EXPIRATION_MINUTES=

# External API Keys
# TODO: Replace with real API keys
ANTHROPIC_API_KEY=
GOOGLE_MAPS_API_KEY=
OPENWEATHER_API_KEY=

# API Mock/Real Configuration
# Set to 'true' to use real APIs (costs money), 'false' for free mock data
USE_REAL_CLAUDE=true
USE_REAL_GOOGLE_PLACES=false
USE_REAL_WEATHER=false
USE_REAL_GOOGLE_CALENDAR=false

# Development/Testing Configuration
# Set to 'true' to bypass JWT authentication in development (no login required)
DISABLE_AUTH_IN_DEV=true
